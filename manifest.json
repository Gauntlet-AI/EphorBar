{
  "manifest_version": 3,
  "name": "Local AI Assistant",
  "version": "1.0",
  "description": "A Chrome extension for interacting with Ollama",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:11434/*"
  ],
  "action": {
    "default_title": "Open AI Sidebar",
    "default_icon": {
      "16": "assets/icon16.jpg",
      "48": "assets/icon48.jpg",
      "128": "assets/icon128.jpg"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["styles/sidebar.css"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "sidebar.html",
        "sidebar.js",
        "styles/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
} 