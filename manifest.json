{
  "manifest_version": 3,
  "name": "LlamaBar",
  "version": "1.0",
  "description": "A Chrome extension for interacting with Ollama",
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:11434/*",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://openrouter.ai/*",
    "https://api.perplexity.ai/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_title": "LlamaBar",
    "default_icon": {
      "16": "assets/icon16.jpg",
      "48": "assets/icon48.jpg",
      "128": "assets/icon128.jpg"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "sidebar.html",
        "components/setup-wizard.html",
        "assets/ollama.jpg",
        "assets/openai.jpg",
        "assets/claude.jpg",
        "assets/gemini.webp",
        "assets/perplexity.png",
        "assets/openrouter.jpeg",
        "assets/icon16.jpg",
        "assets/icon48.jpg",
        "assets/icon128.jpg"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' http://localhost:11434 https://api.openai.com https://api.anthropic.com https://openrouter.ai https://api.perplexity.ai https://generativelanguage.googleapis.com"
  }
} 